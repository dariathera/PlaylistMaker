<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
    <style name="ButtonActivityMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/btnMarginVertical</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/titleText</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <!--
        Для атрибутов, принадлежащих пространству имён app,
        не нужно писать app: перед названием самого атрибута.
        -->
        <item name="cornerRadius">@dimen/btnСornerRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="iconPadding">@dimen/btnIconPadding</item>
    </style>

    <style name="SettingsListItemsText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/plainTextSection_textWidth</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/plainTextSection_marginStart</item>
        <item name="android:layout_marginTop">@dimen/plainTextSection_marginTopAndBottom</item>
        <item name="android:layout_marginBottom">@dimen/plainTextSection_marginTopAndBottom</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/plainText</item>
    </style>

    <style name="SettingsListItemsIcon">
        <item name="android:layout_width">@dimen/plainTextSection_iconSize</item>
        <item name="android:layout_height">@dimen/plainTextSection_iconSize</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/plainTextSection_iconMarginEnd</item>
        <item name="android:tint">?attr/colorPrimaryVariant</item>
        <item name="android:importantForAccessibility">yes</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="VerticalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="OrdinarySwitchColor">
        <item name="android:thumbTint">@color/YP_Turquoise</item>
        <item name="android:trackTint">@color/YP_Turquoise_Light</item>
    </style>

    <style name="ButtonGoBack">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:contentDescription">@string/go_back</item>
        <item name="android:padding">12dp</item>
        <item name="icon">@drawable/ic_arrow_back_24</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/titleText</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">@color/YP_Text_Gray</item>
        <item name="tint">@color/YP_Text_Gray</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:importantForAccessibility">yes</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SearchTrackListItemSmallText">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="tint">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="TextBanner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/bannerText</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/buttonText</item>
        <item name="android:background">@drawable/rounded_background_54</item>
        <item name="android:textColor">@color/YP_White</item>
        <item name="backgroundTint">@color/YP_Black</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>