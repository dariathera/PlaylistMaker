<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsListSwitch" parent="SettingsListItemsText">
        <item name="thumbTint">@color/YP_Blue</item>
        <item name="trackTint">@color/YP_Blue_Light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/plainTextSection_iconMarginEnd</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">@color/YP_Black</item>
        <item name="tint">@color/YP_Black</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:importantForAccessibility">yes</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/buttonText</item>
        <item name="android:background">@drawable/rounded_background_54</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="backgroundTint">@color/YP_White</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>