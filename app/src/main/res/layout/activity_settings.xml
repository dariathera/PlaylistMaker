<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YP_White"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGoBack"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:stateListAnimator="@null"
            android:elevation="0dp"
            android:outlineProvider="none"

            android:contentDescription="@string/go_back"
            android:padding="12dp"
            app:icon="@drawable/ic_arrow_back_24"
            app:iconTint="@color/YP_Black"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/ys_display_medium"
            android:gravity="start"
            android:layout_gravity="start"

            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"

            android:text="@string/settings"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/titleText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/plainTextSection_textWidth"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/plainTextSection_marginStart"

                android:layout_marginTop="@dimen/plainTextSection_marginTopAndBottom"
                android:layout_marginBottom="@dimen/plainTextSection_marginTopAndBottom"

                android:fontFamily="@font/ys_display_regular"
                android:text="@string/dark_theme"
                android:textColor="@color/YP_Black"
                android:textSize="@dimen/plainText" />

            <Switch
                android:layout_width="56dp"
                android:layout_height="48dp"

                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"

                android:layout_marginEnd="6dp"
                android:layout_marginBottom="11dp"

                android:thumbTint="@color/YP_Text_Gray"
                android:trackTint="@color/YP_Light_Gray"

                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/plainTextSection_textWidth"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/plainTextSection_marginStart"

                android:layout_marginTop="@dimen/plainTextSection_marginTopAndBottom"
                android:layout_marginBottom="@dimen/plainTextSection_marginTopAndBottom"

                android:fontFamily="@font/ys_display_regular"
                android:text="@string/share_the_app"
                android:textColor="@color/YP_Black"
                android:textSize="@dimen/plainText" />

            <ImageView
                android:layout_width="@dimen/plainTextSection_iconSize"
                android:layout_height="@dimen/plainTextSection_iconSize"

                android:layout_alignParentEnd="true"

                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/plainTextSection_iconMarginEnd"

                android:importantForAccessibility="no"
                android:src="@drawable/ic_share_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/plainTextSection_textWidth"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/plainTextSection_marginStart"

                android:layout_marginTop="@dimen/plainTextSection_marginTopAndBottom"
                android:layout_marginBottom="@dimen/plainTextSection_marginTopAndBottom"

                android:fontFamily="@font/ys_display_regular"
                android:text="@string/write_to_support"
                android:textColor="@color/YP_Black"
                android:textSize="@dimen/plainText" />

            <ImageView
                android:layout_width="@dimen/plainTextSection_iconSize"
                android:layout_height="@dimen/plainTextSection_iconSize"

                android:layout_alignParentEnd="true"

                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/plainTextSection_iconMarginEnd"

                android:importantForAccessibility="no"
                android:src="@drawable/ic_support_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/plainTextSection_textWidth"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/plainTextSection_marginStart"

                android:layout_marginTop="@dimen/plainTextSection_marginTopAndBottom"
                android:layout_marginBottom="@dimen/plainTextSection_marginTopAndBottom"

                android:fontFamily="@font/ys_display_regular"
                android:text="@string/user_agreement"
                android:textColor="@color/YP_Black"
                android:textSize="@dimen/plainText" />

            <ImageView
                android:layout_width="@dimen/plainTextSection_iconSize"
                android:layout_height="@dimen/plainTextSection_iconSize"

                android:layout_alignParentEnd="true"

                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/plainTextSection_iconMarginEnd"

                android:importantForAccessibility="no"
                android:src="@drawable/ic_arrow_forward_24" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>